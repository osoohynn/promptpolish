{
  "manifest_version": 3,
  "name": "PromptPolish",
  "version": "2.0.0",
  "description": "효과적인 프롬프트 작성을 위한 템플릿 제공 - 7가지 작성 방법론 통합",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://perplexity.ai/*"
  ],
  "optional_host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://perplexity.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PromptPolish Settings"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://perplexity.ai/*"
      ],
      "js": ["promptImprover.js", "content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "polish-prompt": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Open prompt template"
    }
  }
}
